<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <!-- Latest compiled and minified CSS -->
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap-theme.css') }}" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
        <link href="{{ asset('css/menu.css') }}" rel="stylesheet" type="text/css" >
        <link href="{{ asset('css/base.css') }}" rel="stylesheet" type="text/css" >
        <link rel="stylesheet" href="{{ asset('css/bootstrap/bootstrap.min.css') }}" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href="{{ asset('css/forms.css') }}" rel="stylesheet" type="text/css">
        <!-- Google fonts -->
        <link href='{{ asset('https://fonts.googleapis.com/css?family=Passion+One') }}' rel='stylesheet' type='text/css'>
        <link href='{{ asset('https://fonts.googleapis.com/css?family=Oxygen') }}' rel='stylesheet' type='text/css'>
    {% endblock %}
    <!-- Latest compiled and minified JavaScript -->
    <script src="{{ asset('js/bootstrap.js') }}" crossorigin="anonymous"></script>
    <script src="{{ asset('js/jquery-3.2.1.js') }}"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

</head>
<body>

    {% if is_granted('ROLE_USER') %}
    <nav class="navbar navbar-default navbar-static-top navbar-inverse" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">Contest Of Champions</a>
            </div>
            <div id="navbar-menu" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('alliance_main') }}">Alliance</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('user_main_area') }}">User</a></li>
                    <li><a href="{{ path('logout') }}" id="signout"><i class="fa fa-lock" aria-hidden="true"></i>
                            Sign Out</a></li>
                </ul>
            </div>
        </div>
        </nav>
        <div class="container">
        {% for message in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        </div>
    {% else %}
        <nav class="navbar navbar-default navbar-static-top navbar-inverse" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand">Contest Of Champions</a>
                </div>
                <div id="navbar-menu" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('register') }}">Register</a></li>
                        <li><a href="{{ path('login') }}">Login</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            {% for message in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.session.flashBag.get('notice') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    {% endif %}
        {% block body %}

        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
