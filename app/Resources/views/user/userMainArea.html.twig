{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

    <h1>This is a user area!</h1>
    <div class="container col-md-6">
        <h3>Username : {{ user.username }}</h3>
        <p>Date account was created : {{ user.dateCreated | date("Y-m-d") }}</p>
    </br>
        <p>Email address : {{ user.email }}</p>
    </br>
        <p>Country : {{ country.name }}</p>
    </br>
        {% if user_alliance is null %}
        <p> You aren't in any alliance </p>
            {% else %}
            <p>Alliance : {{ user_alliance.name }}</p>
                {% endif %}
    </div>
    <div class="container col-md-6">
        <h3>Account option panel</h3>
        <a href="{{ path('edit_user_profile') }}" >Edit profile</a>
    </div>
</div>

{% endblock %}